<header class="header" data-scroll-index="0">

  <!-- Start Navbar -->
  <nav class="navbar navbar-expand-lg border-none bg-transparent">
    <div class="container sm-padding-10px-tb sm-padding-15px-lr">

      <!-- start logo -->
      <a class="logo" href="javascript:void(0);" data-scroll-nav="0">
        <img src="<%= image_url "logo-white.png" %>" alt="Ashton - One Page Portfolio" title="Ashton - One Page Portfolio">
      </a>
      <!-- end Logo -->

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="icon-bar"><i class="fas fa-bars"></i></span>
      </button>

      <!-- navbar links -->
      <div class="collapse navbar-collapse" id="navbarContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="#about">
              <%= t("header.about") %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#experience">
              <%= t("header.experience") %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#topics">
              <%= t("header.topics") %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#courses">
              <%= t("header.courses") %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#testimonials">
              <%= t("header.testimonials") %>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#contact">
              <%= t("header.contact") %>
            </a>
          </li>
          <li class="nav-item">
            <%= link_to root_path(locale: :fr), class: "nav-link" do %>
              <img src="<%= image_url "flags/fr.png" %>" alt="" width="20">
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to root_path(locale: :en), class: "nav-link" do %>
              <img src="<%= image_url "flags/uk.png" %>" alt="" width="20">
            <% end %>
          </li>
        </ul>
      </div>
      <!-- end navbar links -->

    </div>

    <a href="javascript:void(0)" class="sidemenu_btn sm-display-none" id="sidebar_toggle">
      <span></span> <span></span> <span></span>
    </a>
  </nav>
</header>
<!-- End Header -->